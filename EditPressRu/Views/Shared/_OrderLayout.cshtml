 */
            $(window).scroll(function () {
                // Если отступ сверху больше 100px то показываем кнопку "Наверх"
                if ($(this).scrollTop() > 700) {
                    $('.button-up').fadeIn();
                } else {
                    $('.button-up').fadeOut();
                }
