                $('.backCallForm').hide();
            });

            $("#backCallSubmit").click(function () {
                //$("#mess_box2").hide();

                var name = $('#name').val();
                var email = $('#email').val();
                var sub = $('#sub').val();
                var msgBody = $('#msgBody').val();

                if (name.length < 1) {
                    $('#err_name').html('Вы не заполнили имя');
                    return false;
                }
                else {
                    $('#err_name').html('');
                }
                if (email.length < 5) {
                    $('#err_email').html('Проверьте поле почта');
                    return false;
                }
                else {
                    $('#err_email').html('');
                }
                if (msgBody.length < 7) {
                    $('#err_body').html('Слишком маленькое сообщение');
                    return false;
                }
                else {
                    $('#err_body').html('');
                }

