                    $(this).removeClass('razd_item_unchecked');
                    $(this).addClass('razd_item_checked');
                    input.val(dat_id);
                }
                else {
                    $(this).removeClass('razd_item_checked');
                    $(this).addClass('razd_item_unchecked');
                    input.val(0);
                }

            });

