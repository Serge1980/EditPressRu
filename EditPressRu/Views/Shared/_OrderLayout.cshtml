                //alert('Элемент foo был изменен.');
                $('#AutoComplitForm').show("slow");
                var term = $('#queryString').val();
                //alert('hhhh');
                if (term.length < 2) {
                    return false;
                }
                $(this).keydown(function (eventObject) {
                    if (eventObject.which == 27 || eventObject.which == 13)
                        $('#AutoComplitForm').hide();
                });
                //alert(term);
                $.ajax({
                    url: "/ajax/autocoplete",
                    type: "POST",
                    data: { term: term },
