            $('.btn-menu').click(function (eventObject) {
                $(this).toggleClass('active');
                $(".menu").toggleClass("active");
                eventObject.preventDefault();
            });
            if ($(window).width() < 900) {
                $(".menu li").hover(
                    function () { $(this).addClass("current"); },
                    function () { $(this).removeClass("current"); }
                );
            }




            //Кнопка наверх
