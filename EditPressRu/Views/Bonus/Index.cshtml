                        <marquee behavior="alternate" direction="right" bgcolor="#33B086" scrollamount="5" scrolldelay="400" height="30" hspace="20" vspace="20">
                            <a href="~/news/index" style="padding-top:30px;text-decoration:none;color:white;text-shadow:1px 1px 2px #808080;font-weight:600;font-size:19px;">!!! *** Новости компании *** !!!</a>
                        </marquee>
                    </div>*@
            </div>
        </div>
        <div class="sideBar1">
            <div class="section1">
                @Html.Partial("_PartialMenuSection")
            </div>
            <div class="sidebarHits">
                @{ Html.RenderPartial("_TopSalesPartial", LstProd); }
            </div>
        </div>
    </div>
</div>

